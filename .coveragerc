[run]
branch = True
source = app
omit =
    # Optional Twitter write API (requires real credentials at import)
    app/twitter_handler.py

[report]
exclude_lines =
    # Do not complain about missing debug-only code
    pragma: no cover
    def __repr__
    raise NotImplementedError
    # Do not complain if tests do not hit defensive code
    raise AssertionError
    if __name__ == .__main__.:
