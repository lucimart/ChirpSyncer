{
  "name": "chirpsyncer-dashboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "set NODE_OPTIONS=--no-deprecation && jest",
    "test:watch": "set NODE_OPTIONS=--no-deprecation && jest --watch",
    "test:coverage": "set NODE_OPTIONS=--no-deprecation && jest --coverage",
    "test:unit": "set NODE_OPTIONS=--no-deprecation && jest --testPathPattern=unit",
    "test:integration": "set NODE_OPTIONS=--no-deprecation && jest --testPathPattern=integration",
    "test:e2e": "set NODE_OPTIONS=--no-deprecation && jest --testPathPattern=e2e",
    "type-check": "tsc --noEmit",
    "storybook": "cross-env STORYBOOK_DISABLE_TELEMETRY=1 STORYBOOK_DISABLE_CRASH_REPORTS=1 storybook dev -p 6006",
    "build-storybook": "cross-env STORYBOOK_DISABLE_TELEMETRY=1 STORYBOOK_DISABLE_CRASH_REPORTS=1 storybook build",
    "test-storybook": "test-storybook --url http://localhost:6006",
    "chromatic": "chromatic --exit-once-uploaded"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@tanstack/react-query": "5.62.16",
    "cmdk": "^1.1.1",
    "framer-motion": "^12.29.0",
    "lucide-react": "0.468.0",
    "next": "14.2.35",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "socket.io-client": "^4.7.4",
    "styled-components": "6.1.14",
    "zod": "3.24.1",
    "zustand": "5.0.2"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.5",
    "@storybook/addon-a11y": "8.6.14",
    "@storybook/addon-essentials": "8.6.14",
    "@storybook/addon-interactions": "8.6.14",
    "@storybook/react-webpack5": "^8.6.14",
    "@storybook/test": "8.6.14",
    "@storybook/test-runner": "0.19.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "22.10.5",
    "@types/react": "18.3.17",
    "@types/react-dom": "18.3.5",
    "babel-loader": "^9.2.1",
    "chromatic": "^11.15.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "8.57.1",
    "eslint-config-next": "15.1.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "storybook": "8.6.14",
    "ts-jest": "^29.4.6",
    "typescript": "5.7.2",
    "wait-on": "^8.0.1"
  }
}
